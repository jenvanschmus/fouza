---
import BaseLayout from '../layouts/BaseLayout.astro';

// 1. Fetch all jewelry items directly from the folder
const allItems = await Astro.glob('../content/gallery/*.md');

// 2. Sort them by date (newest first)
const sortedItems = allItems.sort((a, b) => {
  return new Date(b.frontmatter.date).getTime() - new Date(a.frontmatter.date).getTime();
});
---

<BaseLayout title="Gallery Archive">
  <div class="gallery-page">
    
    <header class="gallery-header">
      <div class="meta-tag">ARCHIVE // COLLECTIONS INDEX</div>
      <h1 class="univern-font">The Catalog</h1>
      
      <div class="search-section">
        <input 
          type="text" 
          id="gallery-search" 
          placeholder="SEARCH BY MATERIAL, COLOR, OR PIECE TYPE..." 
          autocomplete="off"
        />
        <div class="search-line"></div>
      </div>
    </header>

    <section class="gallery-grid" id="main-grid">
      {sortedItems.map((item) => (
        <div 
          class="gallery-card" 
          data-search={`${item.frontmatter.title} ${item.rawContent()}`.toLowerCase()}
        >
          <div class="image-frame">
            <img src={item.frontmatter.image} alt={item.frontmatter.title} loading="lazy" />
          </div>
          
          <div class="item-content">
            <div class="item-header">
              <span class="ref-code">REF // {item.file.split('/').pop().replace('.md', '').toUpperCase()}</span>
              <h3 class="item-title">{item.frontmatter.title}</h3>
            </div>
            
            <div class="item-description">
              <item.Content />
            </div>

            <div class="card-footer">
              <a href="/contact" class="inquiry-btn">Inquire</a>
            </div>
          </div>
        </div>
      ))}
    </section>

    <div id="no-results" class="empty-state">
      <p>No matching pieces found in the archive.</p>
    </div>

  </div>
</BaseLayout>

<script>
  // Ultra-fast client-side search
  const searchInput = document.getElementById('gallery-search') as HTMLInputElement;
  const cards = document.querySelectorAll('.gallery-card');
  const noResults = document.getElementById('no-results');

  searchInput?.addEventListener('input', (e) => {
    const term = (e.target as HTMLInputElement).value.toLowerCase();
    let matchCount = 0;

    cards.forEach(card => {
      const searchData = card.getAttribute('data-search') || "";
      if (searchData.includes(term)) {
        (card as HTMLElement).style.display = 'block';
        matchCount++;
      } else {
        (card as HTMLElement).style.display = 'none';
      }
    });

    if (noResults) {
      noResults.style.display = matchCount === 0 ? 'block' : 'none';
    }
  });
</script>

<style>
  .gallery-page {
    max-width: 1400px;
    margin: 0 auto;
    padding: 100px 40px;
  }

  .gallery-header {
    text-align: center;
    margin-bottom: 100px;
  }

  .meta-tag {
    font-family: 'Special Elite', monospace !important;
    font-size: 10px;
    color: #ccc;
    letter-spacing: 0.5em;
    text-transform: uppercase;
    margin-bottom: 20px;
  }

  .univern-font {
    font-size: 4rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    margin-bottom: 40px;
  }

  /* Search Bar */
  .search-section {
    max-width: 500px;
    margin: 0 auto;
  }

  #gallery-search {
    width: 100%;
    border: none;
    background: transparent;
    padding: 20px;
    text-align: center;
    font-size: 1rem;
    letter-spacing: 0.1em;
    outline: none;
    text-transform: uppercase;
  }

  .search-line {
    height: 1px;
    background: #eee;
    width: 100%;
  }

  /* Catalog Grid */
  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
    gap: 100px 40px;
  }

  .gallery-card {
    display: flex;
    flex-direction: column;
    animation: fadeIn 0.8s ease forwards;
  }

  .image-frame {
    aspect-ratio: 1 / 1;
    background: #fcfcfc;
    border: 1px solid #f2f2f2;
    overflow: hidden;
    margin-bottom: 30px;
  }

  .image-frame img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 1.2s cubic-bezier(0.165, 0.84, 0.44, 1);
  }

  .gallery-card:hover img {
    transform: scale(1.05);
  }

  .ref-code {
    font-family: 'Special Elite', monospace !important;
    font-size: 10px;
    color: #ddd;
    letter-spacing: 0.2em;
  }

  .item-title {
    font-size: 1.8rem;
    text-transform: uppercase;
    margin: 10px 0 20px 0;
    letter-spacing: 0.05em;
  }

  .item-description {
    font-family: sans-serif !important;
    font-size: 1rem;
    line-height: 1.8;
    color: #555;
    margin-bottom: 30px;
  }

  .inquiry-btn {
    display: inline-block;
    padding: 10px 25px;
    border: 1px solid #eee;
    color: #aaa;
    text-transform: uppercase;
    font-size: 0.8rem;
    letter-spacing: 0.2em;
    transition: all 0.3s ease;
  }

  .inquiry-btn:hover {
    background: #000;
    color: #fff;
    border-color: #000;
  }

  .empty-state {
    text-align: center;
    padding: 100px;
    color: #ccc;
    text-transform: uppercase;
    letter-spacing: 0.2em;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @media (max-width: 768px) {
    .gallery-grid { grid-template-columns: 1fr; }
    .univern-font { font-size: 2.5rem; }
  }
</style>
