---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// 1. Fetch all entries from 'src/content/gallery/'
const rawItems = await getCollection('gallery');

// 2. "Render" the markdown content for each item so we can display the body text
const galleryItems = await Promise.all(
  rawItems.map(async (item) => {
    const { Content } = await item.render();
    return { ...item, Content };
  })
);

// 3. Sort by title or date if preferred
const sortedItems = galleryItems.sort((a, b) => a.data.title.localeCompare(b.data.title));
---

<BaseLayout title="Gallery">
  <div class="gallery-container">
    
    <header class="gallery-header">
      <div class="blueprint-meta">Archive // Item Catalog</div>
      <h1 class="gallery-title">Collection</h1>
      
      <div class="search-wrapper">
        <input 
          type="text" 
          id="gallery-search" 
          placeholder="SEARCH BY KEYWORD (E.G. GOLD, RING, BLUE)..." 
          autocomplete="off"
        />
        <div class="search-accent-line"></div>
      </div>
    </header>

    <div class="gallery-grid" id="main-grid">
      {sortedItems.map((item) => (
        <div 
          class="gallery-card" 
          data-search-body={`${item.data.title} ${item.body}`.toLowerCase()}
        >
          <div class="image-frame">
            <img src={item.data.image} alt={item.data.title} loading="lazy" />
          </div>
          
          <div class="card-content">
            <div class="card-meta">
              <span class="ref-id">REF // {item.slug.toUpperCase()}</span>
              <h3 class="item-name">{item.data.title}</h3>
            </div>
            
            <div class="item-description">
              <item.Content />
            </div>

            <div class="card-footer">
              <a href="/contact" class="inquiry-btn">Inquire</a>
            </div>
          </div>
        </div>
      ))}
    </div>

    <div id="empty-state" class="empty-message" style="display: none;">
      <p>No matching artifacts found in the archive.</p>
    </div>

  </div>
</BaseLayout>

<script>
  // Simple, high-performance search logic
  const searchInput = document.getElementById('gallery-search') as HTMLInputElement;
  const cards = document.querySelectorAll('.gallery-card');
  const emptyMessage = document.getElementById('empty-state');

  searchInput?.addEventListener('input', (e) => {
    const term = (e.target as HTMLInputElement).value.toLowerCase();
    let matchCount = 0;

    cards.forEach(card => {
      const searchContent = card.getAttribute('data-search-body') || "";
      
      if (searchContent.includes(term)) {
        (card as HTMLElement).style.display = 'block';
        matchCount++;
      } else {
        (card as HTMLElement).style.display = 'none';
      }
    });

    // Toggle the "No results" message
    if (emptyMessage) {
      emptyMessage.style.display = matchCount === 0 ? 'block' : 'none';
    }
  });
</script>

<style>
  .gallery-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 100px 40px;
  }

  .gallery-header {
    text-align: center;
    margin-bottom: 100px;
  }

  .blueprint-meta {
    font-family: 'Special Elite', monospace !important;
    font-size: 10px;
    letter-spacing: 0.5em;
    color: #ccc;
    text-transform: uppercase;
    margin-bottom: 20px;
  }

  .gallery-title {
    font-size: 4rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    margin-bottom: 50px;
  }

  /* Search Bar */
  .search-wrapper {
    max-width: 500px;
    margin: 0 auto;
    position: relative;
  }

  #gallery-search {
    width: 100%;
    border: none;
    padding: 20px;
    background: transparent;
    text-align: center;
    font-size: 1rem;
    letter-spacing: 0.15em;
    outline: none;
    text-transform: uppercase;
  }

  .search-accent-line {
    height: 1px;
    background: #eee;
    width: 100%;
    position: relative;
  }

  /* Catalog Grid */
  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
    gap: 100px 40px;
  }

  .gallery-card {
    display: flex;
    flex-direction: column;
  }

  .image-frame {
    aspect-ratio: 1 / 1;
    overflow: hidden;
    background: #fcfcfc;
    border: 1px solid #f5f5f5;
    margin-bottom: 35px;
  }

  .image-frame img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 1s cubic-bezier(0.165, 0.84, 0.44, 1);
  }

  .gallery-card:hover img {
    transform: scale(1.05);
  }

  /* Typography */
  .ref-id {
    font-family: 'Special Elite', monospace !important;
    font-size: 10px;
    color: #ddd;
    letter-spacing: 0.3em;
  }

  .item-name {
    font-size: 1.8rem;
    text-transform: uppercase;
    margin: 10px 0 25px 0;
    letter-spacing: 0.1em;
  }

  .item-description {
    font-family: sans-serif !important; /* Clean sans-serif for readability */
    font-size: 1rem;
    line-height: 1.8;
    color: #555;
    margin-bottom: 30px;
  }

  .inquiry-btn {
    display: inline-block;
    padding: 12px 30px;
    border: 1px solid #eee;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.3em;
    color: #999;
    transition: all 0.3s ease;
  }

  .inquiry-btn:hover {
    background: #000;
    color: #fff;
    border-color: #000;
  }

  .empty-message {
    padding: 100px;
    text-align: center;
    color: #ccc;
    text-transform: uppercase;
    letter-spacing: 0.2em;
  }

  @media (max-width: 768px) {
    .gallery-grid { grid-template-columns: 1fr; }
    .gallery-title { font-size: 2.5rem; }
  }
</style>
