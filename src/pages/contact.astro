---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact // Establishing Link">
  <div class="contact-page-wrapper">
    <div class="technical-grid"></div>

    <div class="wip-banner">
      <div class="banner-content">
        <div class="pulse-dot"></div>
        <p class="banner-text">Communication Portal // System Calibration in Progress</p>
        <div class="pulse-dot"></div>
      </div>
    </div>

    <section class="contact-container building">
      <div class="header-block">
        <p class="blueprint-label">Phase // 03 — Communication</p>
        <h1 class="page-title">Connect</h1>
      </div>

      <div class="contact-content">
        
        <div class="status-notice">
          <p class="instruction-text">
            The archive’s communication lines are currently being established. <br/>
            <strong>The contact terminal will be fully operational shortly.</strong>
          </p>
        </div>
        
        <form id="contact-form" class="inquiry-form pending-state">
          <div class="form-row">
            <div class="input-group">
              <label>Name</label>
              <input type="text" disabled placeholder="System Configuring..." />
            </div>
          </div>

          <div class="form-row">
            <div class="input-group">
              <label>Return Email</label>
              <input type="email" disabled placeholder="System Configuring..." />
            </div>
          </div>

          <div class="form-row">
            <div class="input-group">
              <label>Message</label>
              <textarea rows="5" disabled placeholder="Establishing secure transmission link..."></textarea>
            </div>
          </div>

          <button type="button" class="submit-btn locked" disabled>
            Link Pending
          </button>
        </form>

        <div class="details-footer">
          <div class="detail-item">
            <span class="tag">Location</span>
            <span class="val">California Workshop</span>
          </div>
          <div class="detail-item">
            <span class="tag">Status</span>
            <span class="val calibration-val">Finalizing Integration</span>
          </div>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .contact-page-wrapper { 
    position: relative; 
    min-height: calc(100vh - 100px); 
    display: flex; 
    flex-direction: column;
    align-items: center; 
    justify-content: center; 
    padding: 120px 20px 80px; 
    background: #fff; 
  }

  .technical-grid { 
    position: absolute; 
    inset: 0; 
    opacity: 0.04; 
    pointer-events: none; 
    background-image: linear-gradient(#000 1px, transparent 1px), linear-gradient(90deg, #000 1px, transparent 1px); 
    background-size: 40px 40px; 
  }

  /* CALIBRATION BANNER */
  .wip-banner {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    background: #111;
    color: #fff;
    padding: 15px 0;
    z-index: 100;
    display: flex;
    justify-content: center;
    border-bottom: 1px solid #333;
  }

  .banner-content {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .banner-text {
    font-family: 'Special Elite', monospace !important;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.25em;
    margin: 0;
  }

  .pulse-dot {
    width: 6px;
    height: 6px;
    background: #888;
    border-radius: 50%;
    animation: pulse 1.5s infinite;
  }

  @keyframes pulse {
    0% { opacity: 0.2; }
    50% { opacity: 1; }
    100% { opacity: 0.2; }
  }

  .contact-container { position: relative; z-index: 10; max-width: 600px; width: 100%; text-align: center; }
  .contact-container.building { opacity: 0.85; }

  .blueprint-label { font-family: 'Special Elite', monospace !important; font-size: 10px; text-transform: uppercase; letter-spacing: 0.5em; color: #999; margin-bottom: 20px; }
  .page-title { font-size: 3.5rem; text-transform: uppercase; letter-spacing: 0.15em; margin-bottom: 40px; color: #111; }
  
  .instruction-text { max-width: 450px; margin: 0 auto 50px; font-size: 0.9rem; line-height: 1.6; color: #444; text-transform: uppercase; letter-spacing: 0.1em; }
  .status-notice { border-left: 1px solid #111; padding-left: 20px; margin-bottom: 50px; text-align: left; }

  /* Pending State Styling */
  .pending-state { pointer-events: none; opacity: 0.6; }
  .pending-state input, .pending-state textarea { background: #fcfcfc; border-bottom-color: #eee; color: #bbb; }
  
  .submit-btn.locked { 
    background: #f4f4f4; 
    border-color: #ddd; 
    color: #999; 
    cursor: wait;
    text-decoration: none;
  }

  .details-footer { display: flex; justify-content: center; gap: 60px; margin-top: 80px; padding-top: 40px; border-top: 1px solid #f2f2f2; }
  .detail-item { display: flex; flex-direction: column; gap: 5px; text-align: left; }
  .tag { font-family: 'Special Elite', monospace !important; font-size: 9px; color: #999; text-transform: uppercase; letter-spacing: 0.2em; }
  .val { font-size: 0.8rem; text-transform: uppercase; color: #111; letter-spacing: 0.1em; }
  .calibration-val { color: #666; font-style: italic; }

  @media (max-width: 768px) { .page-title { font-size: 2.5rem; } .details-footer { flex-direction: column; gap: 30px; text-align: center; } .detail-item { text-align: center; } }
</style>
