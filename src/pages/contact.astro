---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact // Establishing Link">
  <div class="contact-page-wrapper">
    <div class="technical-grid"></div>

    <section class="contact-container">
      <div class="header-block">
        <p class="blueprint-label">Phase // 03 â€” Communication</p>
        <h1 class="page-title">Connect</h1>
      </div>

      <div class="contact-content">
        <form 
          id="contact-form" 
          action="https://formspree.io/f/xvzzrvkj" 
          method="POST"
          class="inquiry-form"
        >
          <div class="form-row">
            <div class="input-group">
              <label for="name">Name</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required 
                placeholder="Your Name" 
              />
            </div>
          </div>

          <div class="form-row">
            <div class="input-group">
              <label for="email">Return Email</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required 
                placeholder="email@example.com" 
              />
            </div>
          </div>

          <div class="form-row">
            <div class="input-group">
              <label for="message">Message</label>
              <textarea 
                id="message" 
                name="message" 
                rows="5" 
                required 
                placeholder="Inquiry details..."
              ></textarea>
            </div>
          </div>

          <input type="text" name="_gotcha" style="display:none" />

          <button type="submit" class="submit-btn">
            Transmit Inquiry
          </button>
        </form>

        <div class="details-footer">
          <div class="detail-item">
            <span class="tag">Location</span>
            <span class="val">California Workshop</span>
          </div>
          <div class="detail-item">
            <span class="tag">Status</span>
            <span class="val">System Online</span>
          </div>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .contact-page-wrapper { 
    position: relative; 
    min-height: calc(100vh - 100px); 
    display: flex; 
    flex-direction: column;
    align-items: center; 
    justify-content: center; 
    padding: 120px 20px 80px; 
    background: #fff; 
    overflow: hidden;
  }

  .technical-grid { 
    position: absolute; 
    inset: 0; 
    opacity: 0.04; 
    pointer-events: none; 
    background-image: linear-gradient(#000 1px, transparent 1px), linear-gradient(90deg, #000 1px, transparent 1px); 
    background-size: 40px 40px; 
  }

  .contact-container { 
    position: relative; 
    z-index: 10; 
    max-width: 600px; 
    width: 100%; 
    text-align: center; 
  }

  .blueprint-label { 
    font-family: 'Special Elite', monospace !important; 
    font-size: 10px; 
    text-transform: uppercase; 
    letter-spacing: 0.5em; 
    color: #999; 
    margin-bottom: 20px; 
  }
  
  .page-title { 
    font-size: clamp(2.5rem, 10vw, 3.5rem); 
    text-transform: uppercase; 
    letter-spacing: 0.15em; 
    margin-bottom: 60px; 
    color: #111; 
  }

  /* FORM STYLING */
  .inquiry-form {
    text-align: left;
    display: flex;
    flex-direction: column;
    gap: 30px;
  }

  .input-group {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .input-group label {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: #888;
  }

  .input-group input, 
  .input-group textarea {
    width: 100%;
    padding: 12px 0;
    background: transparent;
    border: none;
    border-bottom: 1px solid #ddd;
    font-family: inherit;
    font-size: 1rem;
    color: #111;
    outline: none;
    transition: border-color 0.3s ease;
    border-radius: 0; /* Prevents iOS rounded corners */
  }

  .input-group input:focus, 
  .input-group textarea:focus {
    border-bottom-color: #111;
  }

  .submit-btn {
    margin-top: 20px;
    padding: 15px 40px;
    background: #fff;
    border: 1px solid #111;
    color: #111;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-size: 0.8rem;
    cursor: pointer;
    transition: all 0.3s ease;
    -webkit-tap-highlight-color: transparent;
  }

  .submit-btn:hover {
    background: #111;
    color: #fff;
  }

  .details-footer { 
    display: flex; 
    justify-content: center; 
    gap: 60px; 
    margin-top: 80px; 
    padding-top: 40px; 
    border-top: 1px solid #f2f2f2; 
  }

  .detail-item { 
    display: flex; 
    flex-direction: column; 
    gap: 5px; 
    text-align: left; 
  }

  .tag { 
    font-family: 'Special Elite', monospace !important; 
    font-size: 9px; 
    color: #999; 
    text-transform: uppercase; 
    letter-spacing: 0.2em; 
  }

  .val { 
    font-size: 0.8rem; 
    text-transform: uppercase; 
    color: #111; 
    letter-spacing: 0.1em; 
  }

  @media (max-width: 768px) { 
    .contact-page-wrapper { padding-top: 80px; }
    .page-title { margin-bottom: 40px; }
    .details-footer { flex-direction: column; gap: 30px; text-align: center; } 
    .detail-item { text-align: center; } 
  }
</style>
