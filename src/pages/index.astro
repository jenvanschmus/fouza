---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Home">
  <section class="hero-section">
    <div class="hero-image-placeholder">
       <span class="technical-label">Featured Work // 001</span>
    </div>
  </section>

  <section class="about-section" id="about">
    <div class="about-container">
      <div class="blueprint-tag">Artisan Profile</div>
      <h2 class="about-title">The Craft</h2>
      <div class="about-content">
        <p>
          Targeting the intersection of traditional goldsmithing and modern design, 
          this workshop focuses on bespoke pieces that tell a story of precision and patience.
        </p>
        <p>
          Every weld, every polish, and every stone setting is executed with the mechanical 
          integrity of a master builder and the soul of an artist.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* 800px Hero Image Reservation */
  .hero-section {
    width: 100%;
    height: 800px;
    margin-top: 100px; /* Offset for fixed header */
    background-color: #f9f9f9;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    border-bottom: 1px solid #eee;
  }

  .hero-image-placeholder {
    width: 100%;
    height: 100%;
    background-image: url('/site-assets/hero-main.jpg'); /* Add your image here */
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: flex-end;
    padding: 40px;
  }

  /* About Section Styling */
  .about-section {
    padding: 120px 0;
    background-color: #fff;
    display: flex;
    justify-content: center;
  }

  .about-container {
    max-width: 800px;
    padding: 0 40px;
    text-align: center;
  }

  .blueprint-tag {
    font-family: 'Special Elite', monospace;
    font-size: 10px;
    text-transform: uppercase;
    letter-spacing: 0.5em;
    color: #ccc;
    margin-bottom: 20px;
  }

  .about-title {
    font-family: 'Univern', sans-serif;
    font-size: 3rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 40px;
    color: #111;
  }

  .about-content {
    font-family: sans-serif;
    font-size: 1.1rem;
    line-height: 1.8;
    color: #555;
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .technical-label {
    font-family: 'Special Elite', monospace;
    font-size: 12px;
    color: #888;
    background: rgba(255,255,255,0.8);
    padding: 5px 15px;
  }
</style>
