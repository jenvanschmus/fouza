---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Home">
  <section class="hero-box">
    <div class="hero-content">
      <p class="hero-tag">Handcrafted // Bespoke</p>
    </div>
  </section>

  <section class="about-box">
    <div class="about-inner">
      <h2 class="section-title">The Workshop</h2>
      <div class="text-block">
        <p>Based on traditional goldsmithing techniques, our workshop creates jewelry for the modern collector who values the weight of history and the precision of the machine.</p>
        <p>Each piece is a mechanical study in gold, silver, and precious stone.</p>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .hero-box {
    width: 100%;
    height: 800px; /* YOUR RESERVED SPACE */
    background: #f0f0f0; /* Grey placeholder */
    display: flex;
    align-items: center;
    justify-content: center;
    background-image: url('/site-assets/hero-main.jpg');
    background-size: cover;
    background-position: center;
  }

  .hero-tag {
    font-family: 'Special Elite', monospace;
    color: #999;
    letter-spacing: 0.5em;
    text-transform: uppercase;
    font-size: 12px;
  }

  .about-box {
    padding: 100px 0;
    background: #fff;
    display: flex;
    justify-content: center;
  }

  .about-inner {
    max-width: 600px;
    text-align: center;
  }

  .section-title {
    font-family: 'Univern', sans-serif;
    font-size: 2.5rem;
    margin-bottom: 30px;
    letter-spacing: 0.1em;
  }

  .text-block {
    font-family: sans-serif;
    line-height: 1.8;
    color: #444;
  }
</style>
