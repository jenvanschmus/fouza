---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Goldsmith Portfolio</title>
	</head>
	<body class="bg-white selection:bg-zinc-200">
		<Header />

		<main class="pt-16 min-h-screen bg-[#ececec] relative overflow-hidden flex items-center justify-center">
			<div class="absolute inset-0 pointer-events-none opacity-[0.05]" 
				 style="background-image: linear-gradient(#000 1px, transparent 1px), linear-gradient(90deg, #000 1px, transparent 1px); background-size: 50px 50px;">
			</div>

			<div class="relative z-10 text-center">
				<div class="w-24 h-24 border border-zinc-300 rounded-full mx-auto mb-6 flex items-center justify-center animate-[spin_20s_linear_infinite]">
					<div class="w-20 h-20 border-t border-zinc-400 rounded-full"></div>
				</div>
				<p class="font-['Special_Elite',_serif] text-zinc-400 uppercase tracking-[0.3em] text-xs">Portfolio Coming Soon</p>
			</div>
		</main>

		<Footer />
	</body>
</html>
