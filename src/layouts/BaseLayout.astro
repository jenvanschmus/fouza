---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
const { title } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title} | Goldsmith Portfolio</title>
    <style is:global>
      /* 1. Register UNIVERN globally so it's available everywhere */
      @font-face {
        font-family: 'Univern';
        src: url('/fonts/UNIVERN.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }

      body, html {
        margin: 0;
        padding: 0;
        min-height: 100vh;
        background-color: #fff;
        display: flex;
        flex-direction: column;
      }

      main {
        flex: 1; /* Pushes footer to the bottom */
        padding-top: 100px; /* OFFSET: Same as header height */
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
