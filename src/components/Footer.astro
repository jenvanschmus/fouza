---
const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="footer-grid">
    <div></div>

    <div class="footer-column">
      <h4 class="label">Sitemap</h4>
      <ul class="hand-links">
        <li><a href="/gallery">Gallery</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/contact">Contact</a></li>
      </ul>
    </div>

    <div class="footer-column">
      <h4 class="label">Contact</h4>
      <div class="hand-links">
        <p>By Appointment</p>
        <p>studio@yourdomain.com</p>
      </div>
    </div>

    <div></div>
  </div>

  <div class="footer-bottom">
    <div class="tech-line"></div>
    <p class="copyright">© {currentYear} — Workshop Archive</p>
  </div>
</footer>

<style>
  .site-footer {
    background-color: #fff;
    border-top: 1px solid #f0f0f0;
    padding: 5rem 0 3rem 0;
    width: 100%;
  }

  .footer-grid {
    display: grid;
    /* Creates 4 equal 25% columns */
    grid-template-columns: 1fr 1fr 1fr 1fr;
    width: 100%;
    margin-bottom: 4rem;
  }

  .footer-column {
    display: flex;
    flex-direction: column;
    align-items: center; /* Centers content horizontally within the 25% block */
    text-align: center;
  }

  .label {
    font-family: 'Special Elite', serif;
    font-size: 10px;
    text-transform: uppercase;
    letter-spacing: 0.3em;
    color: #bbb;
    margin-bottom: 1.5rem;
  }

  .hand-links {
    font-family: 'Architects Daughter', cursive;
    list-style: none;
    padding: 0;
    margin: 0;
    color: #444;
    font-size: 0.95rem;
    line-height: 1.8;
  }

  .hand-links a {
    text-decoration: none;
    color: inherit;
  }

  .hand-links a:hover {
    text-decoration: underline;
    text-underline-offset: 4px;
  }

  .footer-bottom {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }

  .tech-line {
    width: 40px;
    height: 1px;
    background-color: #eee;
    position: relative;
  }

  .tech-line::before, .tech-line::after {
    content: '';
    position: absolute;
    width: 3px;
    height: 3px;
    background: #ddd;
    border-radius: 50%;
    top: -1px;
  }
  .tech-line::before { left: 0; }
  .tech-line::after { right: 0; }

  .copyright {
    font-family: 'Special Elite', serif;
    font-size: 9px;
    letter-spacing: 0.4em;
    color: #ccc;
    text-transform: uppercase;
  }

  /* Responsive adjustment: stack on small screens */
  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
  }
</style>
