---
const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="footer-grid">
    <div class="spacer"></div>
    
    <div class="footer-content">
      <div class="col">
        <h4 class="label">Sitemap</h4>
        <a href="/gallery">Gallery</a>
        <a href="/contact">Contact</a>
      </div>
      <div class="col">
        <h4 class="label">Inquiries</h4>
        <a href="mailto:curiosity@fouza.com" class="email-link">curiosity@fouza.com</a>
      </div>
    </div>

    <div class="spacer"></div>
  </div>

  <div class="footer-bottom">
    <p>Â© {currentYear} // WORKSHOP ARCHIVE</p>
  </div>
</footer>

<style>
  .site-footer {
    padding: 100px 0 60px 0;
    border-top: 1px solid #f8f8f8;
    background: white;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1fr 2fr 1fr; /* 25% | 50% | 25% */
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
  }

  .col {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 15px;
  }

  .label {
    font-size: 0.8rem;
    color: #ddd;
    margin-bottom: 10px;
    text-transform: uppercase;
    letter-spacing: 0.3em;
  }

  .col a, .col span { 
    text-decoration: none; 
    color: #222; 
    font-size: 1.1rem;
    text-transform: uppercase;
  }

  .email-link {
    text-transform: lowercase !important; /* Keep email readable */
    opacity: 0.7;
  }

  .footer-bottom {
    margin-top: 80px;
    text-align: center;
    font-size: 10px;
    letter-spacing: 0.5em;
    color: #eee;
  }
</style>
