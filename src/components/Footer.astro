---
const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="footer-inner">
    <div class="spacer"></div>
    
    <div class="content-area">
      <div class="footer-col">
        <h4 class="footer-label">Sitemap</h4>
        <nav class="footer-nav">
          <a href="/gallery">Gallery</a>
          <a href="/about">About</a>
          <a href="/contact">Contact</a>
        </nav>
      </div>

      <div class="footer-col">
        <h4 class="footer-label">Contact</h4>
        <div class="footer-text">
          <span>By Appointment</span>
          <span>studio@yourdomain.com</span>
        </div>
      </div>
    </div>

    <div class="spacer"></div>
  </div>

  <div class="footer-bottom">
    <div class="mechanical-dot"></div>
    <p class="archive-text">Â© {currentYear} // Workshop Archive</p>
  </div>
</footer>

<style>
  .site-footer {
    width: 100% !important;
    background: #ffffff !important;
    border-top: 1px solid #f2f2f2 !important;
    padding: 80px 0 40px 0 !important;
    display: block !important;
  }

  .footer-inner {
    display: flex !important;
    width: 100%;
  }

  .spacer {
    flex: 1; /* Takes up 25% */
  }

  .content-area {
    flex: 2; /* Takes up exactly 50% */
    display: grid;
    grid-template-columns: 1fr 1fr; /* Splits that 50% into two halves */
  }

  .footer-col {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .footer-label {
    font-family: 'Special Elite', serif;
    font-size: 11px;
    letter-spacing: 0.4em;
    color: #d1d1d1;
    text-transform: uppercase;
    margin-bottom: 25px;
  }

  .footer-nav, .footer-text {
    font-family: 'Architects Daughter', cursive;
    display: flex;
    flex-direction: column;
    gap: 12px;
    color: #444;
    font-size: 1rem;
  }

  .footer-nav a {
    color: inherit;
    text-decoration: none;
    transition: opacity 0.2s;
  }

  .footer-nav a:hover {
    opacity: 0.5;
  }

  .footer-bottom {
    margin-top: 60px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
  }

  .mechanical-dot {
    width: 6px;
    height: 6px;
    border: 1px solid #eee;
    border-radius: 50%;
  }

  .archive-text {
    font-family: 'Special Elite', serif;
    font-size: 9px;
    letter-spacing: 0.5em;
    color: #e0e0e0;
    text-transform: uppercase;
  }

  @media (max-width: 768px) {
    .content-area { grid-template-columns: 1fr; gap: 40px; }
    .spacer { display: none; }
  }
</style>
