---
// Define your links here. 
// The 'icon' path will look for /public/external-links/youtube.png, etc.
const links = [
  { name: 'Instagram', url: 'https://instagram.com/' },
  { name: 'YouTube', url: 'https://youtube.com/' },
  { name: 'Etsy', url: 'https://etsy.com/shop/' }
];
---

<header class="fixed top-0 left-0 w-full h-16 bg-white shadow-md flex items-center justify-between px-6 z-50">
  <div class="flex-shrink-0">
    <a href="/">
      <img src="/site-assets/home-logo.png" alt="Logo" class="h-6 w-auto grayscale" />
    </a>
  </div>

  <nav class="flex items-center gap-8">
    <div class="flex gap-6 text-[16px] text-zinc-800 font-['Architects_Daughter',_cursive]">
      <a href="/gallery" class="hover:text-zinc-500 transition-colors">Gallery</a>
      <a href="/about" class="hover:text-zinc-500 transition-colors">About</a>
      <a href="/contact" class="hover:text-zinc-500 transition-colors">Contact</a>
    </div>

    <div class="h-4 w-[1px] bg-zinc-200"></div>

    <div class="flex gap-5 items-center">
      {links.map((link) => (
        <a href={link.url} target="_blank" rel="noopener noreferrer" class="group">
          <div class="relative flex items-center justify-center">
            <img 
              src={`/external-links/${link.name.toLowerCase()}.png`} 
              alt=""
              class="w-5 h-5 grayscale opacity-50 group-hover:opacity-100 transition-all block"
              onerror="this.style.display='none'; this.nextElementSibling.style.display='block';"
            />
            <span class="hidden font-['Architects_Daughter'] text-sm text-zinc-400 group-hover:text-zinc-800 transition-colors whitespace-nowrap">
              {link.name}
            </span>
          </div>
        </a>
      ))}
    </div>
  </nav>
</header>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Architects+Daughter&family=Special+Elite&display=swap');
</style>
