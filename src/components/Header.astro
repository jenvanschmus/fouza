---
const links = [
  { name: 'Instagram', url: 'https://instagram.com/yourprofile' },
  { name: 'YouTube', url: 'https://youtube.com/@yourchannel' },
  { name: 'Etsy', url: 'https://etsy.com/shop/yourshop' }
];
---

<header class="site-header">
  <div class="header-container">
    <div class="logo-wrapper">
      <a href="/">
        <img src="/site-assets/home-logo.png" alt="Logo" class="main-logo" />
      </a>
    </div>

    <nav class="main-nav">
      <div class="internal-links">
        <a href="/gallery">Gallery</a>
        <a href="/about">About</a>
        <a href="/contact">Contact</a>
      </div>

      <div class="divider"></div>

      <div class="social-links">
        {links.map((link) => (
          <a href={link.url} target="_blank" rel="noopener noreferrer">
            <img 
              src={`/external-links/${link.name.toLowerCase()}.png`} 
              class="social-icon"
              onerror="this.style.display='none'; this.nextElementSibling.style.display='inline';"
            />
            <span class="fallback-text">{link.name}</span>
          </a>
        ))}
      </div>
    </nav>
  </div>
</header>

<style>
  @font-face {
    font-family: 'Univern';
    src: url('/fonts/UNIVERN.ttf') format('truetype');
    font-display: swap;
  }

  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100px;
    background: white;
    box-shadow: 0 10px 30px rgba(0,0,0,0.05);
    z-index: 9999;
    display: flex;
    align-items: center;
  }

  .header-container {
    width: 100%;
    padding: 0 50px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .main-logo {
    height: 80px; /* 80% of 100px */
    width: auto;
  }

  .main-nav {
    display: flex;
    align-items: center;
    gap: 40px;
  }

  .internal-links {
    display: flex;
    gap: 30px;
    font-family: 'Univern', sans-serif;
  }

  .internal-links a {
    text-decoration: none;
    color: #111;
    font-size: 1.2rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .divider { width: 1px; height: 30px; background: #eee; }

  .social-links { display: flex; gap: 20px; }
  .social-icon { width: 22px; height: 22px; filter: grayscale(100%); opacity: 0.4; }
  .fallback-text { display: none; font-family: 'Univern'; font-size: 0.8rem; }
</style>
