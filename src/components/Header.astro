---
const links = [
  { name: 'Instagram', url: 'https://instagram.com/yourprofile' },
  { name: 'YouTube', url: 'https://youtube.com/@yourchannel' },
  { name: 'Etsy', url: 'https://etsy.com/shop/yourshop' }
];
---

<header class="header-bar">
  <div class="header-inner">
    <a href="/" class="logo-link">
      <img src="/site-assets/home-logo.png" alt="Home" class="logo-img" />
    </a>

    <nav class="nav-container">
      <div class="nav-group">
        <a href="/gallery" class="nav-link">Gallery</a>
        <a href="/contact" class="nav-link">Contact</a>
      </div>

      <div class="line-divider"></div>

      <div class="social-group">
        {links.map(l => (
          <a href={l.url} target="_blank" class="social-item">
            <img src={`/external-links/${l.name.toLowerCase()}.png`} class="social-icon" onerror="this.style.display='none'; this.nextElementSibling.style.display='inline';" />
            <span class="social-fallback">{l.name}</span>
          </a>
        ))}
      </div>
    </nav>
  </div>
</header>

<style>
  .header-bar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100px;
    background: white;
    box-shadow: 0 10px 30px rgba(0,0,0,0.04);
    z-index: 9999;
    display: flex;
    align-items: center;
  }

  .header-inner {
    width: 100%;
    padding: 0 60px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo-img {
    height: 80px; /* 80% of 100px */
    width: auto;
  }

  .nav-container { display: flex; align-items: center; gap: 60px; }

  .nav-group {
    display: flex;
    gap: 80px; /* INCREASED SPACING */
  }

  .nav-link {
    text-decoration: none;
    color: #000;
    font-size: 1.2rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
  }

  .line-divider { width: 1px; height: 30px; background: #eee; }
  .social-group { display: flex; gap: 20px; }
  .social-icon { width: 22px; height: 22px; filter: grayscale(1); opacity: 0.4; }
  .social-fallback { display: none; font-size: 0.8rem; }
</style>
