---
const links = [
  { name: 'Instagram', url: 'https://instagram.com/yourprofile' },
  { name: 'YouTube', url: 'https://youtube.com/@yourchannel' },
  { name: 'Etsy', url: 'https://etsy.com/shop/yourshop' }
];
---

<header class="site-header">
  <div class="header-container">
    <div class="logo-wrapper">
      <a href="/">
        <img src="/site-assets/home-logo.png" alt="Logo" class="main-logo" />
      </a>
    </div>

    <nav class="main-nav">
      <div class="internal-links">
        <a href="/gallery">Gallery</a>
        <a href="/about">About</a>
        <a href="/contact">Contact</a>
      </div>

      <div class="divider"></div>

      <div class="external-links">
        {links.map((link) => (
          <a href={link.url} target="_blank" rel="noopener noreferrer" class="external-link-item">
            <img 
              src={`/external-links/${link.name.toLowerCase()}.png`} 
              alt=""
              class="external-icon"
              onerror="this.style.display='none'; this.nextElementSibling.style.display='inline';"
            />
            <span class="fallback-text">{link.name}</span>
          </a>
        ))}
      </div>
    </nav>
  </div>
</header>

<style>
  /* --- CUSTOMIZABLE VARIABLES --- */
  :root {
    --header-height: 80px; /* Adjust this to change header thickness */
    --logo-scale: 0.8;      /* 80% constraint */
  }

  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: var(--header-height);
    background-color: white;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    display: flex;
    align-items: center;
    z-index: 1000;
  }

  .header-container {
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  /* --- LOGO SCALING --- */
  .logo-wrapper {
    height: var(--header-height);
    display: flex;
    align-items: center;
  }

  .main-logo {
    /* This calculates exactly 80% of your header height */
    height: calc(var(--header-height) * var(--logo-scale));
    width: auto;
    display: block;
    filter: grayscale(100%);
  }

  /* --- NAVIGATION --- */
  .main-nav {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .internal-links {
    display: flex;
    gap: 1.5rem;
    font-family: 'Architects Daughter', cursive;
    font-size: 1.1rem;
  }

  .internal-links a {
    text-decoration: none;
    color: #333;
    transition: color 0.2s ease;
  }

  .internal-links a:hover {
    color: #888;
  }

  .divider {
    width: 1px;
    height: 20px;
    background-color: #eee;
  }

  .external-links {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .external-icon {
    width: 20px;
    height: 20px;
    object-fit: contain;
    filter: grayscale(100%);
    opacity: 0.5;
    transition: opacity 0.2s;
  }

  .external-icon:hover {
    opacity: 1;
  }

  .fallback-text {
    display: none; /* Hidden unless img fails */
    font-family: 'Architects Daughter', cursive;
    font-size: 0.9rem;
    color: #888;
  }

  @import url('https://fonts.googleapis.com/css2?family=Architects+Daughter&family=Special+Elite&display=swap');
</style>
