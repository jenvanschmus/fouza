<header class="fixed top-0 left-0 w-full h-16 bg-white shadow-md flex items-center justify-between px-8 z-50">
  <div class="flex-shrink-0">
    <a href="/">
      <img src="/site-assets/home-logo.png" alt="Home Logo" class="h-8 w-auto grayscale" />
    </a>
  </div>

  <nav class="flex items-center gap-10">
    <div class="flex gap-8 text-lg text-black font-['Architects_Daughter']">
      <a href="/gallery" class="hover:underline decoration-1 underline-offset-4">Gallery</a>
      <a href="/about" class="hover:underline decoration-1 underline-offset-4">About</a>
      <a href="/contact" class="hover:underline decoration-1 underline-offset-4">Contact</a>
    </div>

    <div class="h-4 w-[1px] bg-gray-300"></div>

    <div class="flex gap-4 grayscale opacity-60">
      {externalLinks.map(link => (
        <a href={link.url} target="_blank" rel="noopener noreferrer">
          <img src={link.icon} alt={link.name} class="w-4 h-4 hover:opacity-100 transition-opacity" />
        </a>
      ))}
    </div>
  </nav>
</header>
