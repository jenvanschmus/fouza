---
const links = [
  { name: 'Instagram', url: 'https://instagram.com/yourprofile' },
  { name: 'YouTube', url: 'https://youtube.com/@yourchannel' },
  { name: 'Etsy', url: 'https://etsy.com/shop/yourshop' }
];
---

<header class="site-header">
  <div class="header-container">
    <div class="logo-wrapper">
      <a href="/">
        <img src="/site-assets/home-logo.png" alt="Logo" class="main-logo" />
      </a>
    </div>

    <nav class="main-nav">
      <div class="internal-links">
        <a href="/gallery">Gallery</a>
        <a href="/about">About</a>
        <a href="/contact">Contact</a>
      </div>

      <div class="divider"></div>

      <div class="external-links">
        {links.map((link) => (
          <a href={link.url} target="_blank" rel="noopener noreferrer" class="external-link-item">
            <img 
              src={`/external-links/${link.name.toLowerCase()}.png`} 
              alt="" 
              class="external-icon"
              onerror="this.style.display='none'; this.nextElementSibling.style.display='inline';"
            />
            <span class="fallback-text">{link.name}</span>
          </a>
        ))}
      </div>
    </nav>
  </div>
</header>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Architects+Daughter&family=Special+Elite&display=swap');

  :root {
    --header-height: 100px; /* Your updated size */
    --logo-scale: 0.8;
  }

  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: var(--header-height);
    background-color: white;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.06);
    display: flex;
    align-items: center;
    z-index: 1000;
  }

  .header-container {
    width: 100%;
    padding: 0 4rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .main-logo {
    height: calc(var(--header-height) * var(--logo-scale));
    width: auto;
    display: block;
  }

  .main-nav {
    display: flex;
    align-items: center;
    gap: 3rem;
  }

  .internal-links {
    display: flex;
    gap: 2.5rem;
    /* Updated to the technical steampunk font */
    font-family: 'Special Elite', system-ui, serif;
    text-transform: uppercase;
    letter-spacing: 0.15em;
  }

  .internal-links a {
    text-decoration: none;
    color: #1a1a1a;
    font-size: 0.95rem;
    transition: all 0.3s ease;
  }

  .internal-links a:hover {
    color: #a18a4d; /* Subtle gold tint on hover */
    letter-spacing: 0.25em; /* Subtle mechanical expansion effect */
  }

  .divider {
    width: 1px;
    height: 30px;
    background-color: #f0f0f0;
  }

  .external-links {
    display: flex;
    gap: 1.5rem;
  }

  .external-icon {
    width: 22px;
    height: 22px;
    filter: grayscale(100%);
    opacity: 0.4;
    transition: opacity 0.3s;
  }

  .external-icon:hover { opacity: 1; }

  .fallback-text {
    display: none;
    font-family: 'Special Elite', serif;
    font-size: 0.75rem;
    color: #888;
  }
</style>
