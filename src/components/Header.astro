---
const links = [
  { name: 'Instagram', url: 'https://instagram.com/yourprofile' },
  { name: 'YouTube', url: 'https://youtube.com/@yourchannel' },
  { name: 'Etsy', url: 'https://etsy.com/shop/yourshop' }
];
---

<header class="site-header">
  <div class="header-container">
    <div class="logo-wrapper">
      <a href="/">
        <img src="/site-assets/home-logo.png" alt="Logo" class="main-logo" />
      </a>
    </div>

    <nav class="main-nav">
      <div class="internal-links">
        <a href="/gallery">Gallery</a>
        <a href="/about">About</a>
        <a href="/contact">Contact</a>
      </div>

      <div class="divider"></div>

      <div class="external-links">
        {links.map((link) => (
          <a href={link.url} target="_blank" rel="noopener noreferrer" class="external-link-item">
            <img 
              src={`/external-links/${link.name.toLowerCase()}.png`} 
              alt=""
              class="external-icon"
              onerror="this.style.display='none'; this.nextElementSibling.style.display='inline';"
            />
            <span class="fallback-text">{link.name}</span>
          </a>
        ))}
      </div>
    </nav>
  </div>
</header>

<style>
  :root {
    --header-height: 100px; 
    --logo-scale: 0.8;      /* Adjust this to change logo size (0.1 to 1.0) */
  }

  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: var(--header-height);
    background-color: white;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05); /* Soft shadow casting down */
    display: flex;
    align-items: center;
    z-index: 1000;
  }

  .header-container {
    width: 100%;
    padding: 0 3rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .main-logo {
    height: calc(var(--header-height) * var(--logo-scale));
    width: auto;
    display: block;
    /* Filter removed so your logo shows original colors */
  }

  .main-nav {
    display: flex;
    align-items: center;
    gap: 2.5rem;
  }

  .internal-links {
    display: flex;
    gap: 2rem;
    font-family: 'Architects Daughter', cursive;
  }

  .internal-links a {
    text-decoration: none;
    color: #222;
    font-size: 1.05rem;
    transition: transform 0.2s ease;
  }

  .internal-links a:hover {
    transform: translateY(-1px);
    color: #666;
  }

  .divider {
    width: 1px;
    height: 24px;
    background-color: #eee;
  }

  .external-links {
    display: flex;
    gap: 1.2rem;
  }

  .external-icon {
    width: 18px;
    height: 18px;
    filter: grayscale(100%); /* Keeps external social icons clean/monochrome */
    opacity: 0.4;
  }

  .external-icon:hover { opacity: 1; }

  .fallback-text {
    display: none;
    font-family: 'Architects Daughter', cursive;
    font-size: 0.85rem;
    color: #999;
  }
</style>
