---
const links = [
  { name: 'Instagram', url: 'https://www.instagram.com/jen.van.schmus/' },
  { name: 'YouTube', url: 'https://www.youtube.com/@jenvanschmus' },
  { name: 'Etsy', url: 'https://www.etsy.com/shop/fouza' }
];
---

<header class="header-bar">
  <div class="header-inner">
    <a href="/" class="logo-link">
      <img src="/site-assets/home-logo.png" alt="FOUZA" class="logo-img" />
    </a>

    <nav class="nav-desktop">
      <div class="nav-group">
        <a href="/gallery" class="nav-link">Gallery</a>
        <a href="/contact" class="nav-link">Contact</a>
      </div>

      <div class="line-divider"></div>

      <div class="social-group">
        {links.map(l => (
          <a href={l.url} target="_blank" class="social-item" title={l.name}>
            <img 
              src={`/external-links/${l.name.toLowerCase()}.png`} 
              class="social-icon" 
              alt=""
              width="32"
              height="32"
              onerror="this.style.display='none'; this.nextElementSibling.style.display='inline-block';" 
            />
            <span class="social-fallback">{l.name}</span>
          </a>
        ))}
      </div>
    </nav>

    <button id="menu-toggle" class="hamburger" aria-label="Toggle Menu">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </button>
  </div>

  <div id="mobile-menu" class="mobile-overlay">
    <div class="mobile-inner">
      <nav class="mobile-nav">
        <p class="menu-label">Archive Navigation</p>
        <a href="/gallery" class="mobile-link">Gallery</a>
        <a href="/contact" class="mobile-link">Contact</a>
        
        <div class="mobile-divider"></div>
        
        <p class="menu-label">External Links</p>
        <div class="mobile-socials">
          {links.map(l => (
            <a href={l.url} target="_blank" class="mobile-link">{l.name}</a>
          ))}
        </div>
      </nav>
    </div>
  </div>
</header>

<script>
  const menuToggle = document.getElementById('menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  const body = document.body;

  menuToggle?.addEventListener('click', () => {
    menuToggle.classList.toggle('active');
    mobileMenu?.classList.toggle('open');
    body.classList.toggle('no-scroll');
  });

  // Close menu when a link is clicked
  const mobileLinks = document.querySelectorAll('.mobile-link');
  mobileLinks.forEach(link => {
    link.addEventListener('click', () => {
      menuToggle?.classList.remove('active');
      mobileMenu?.classList.remove('open');
      body.classList.remove('no-scroll');
    });
  });
</script>

<style>
  .header-bar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100px;
    background: #fff;
    border-bottom: 1px solid #111; 
    z-index: 9999;
    display: flex;
    align-items: center;
  }

  .header-inner {
    width: 100%;
    padding: 0 40px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo-link { display: block; line-height: 0; }
  .logo-img { height: 65px; width: auto; display: block; }

  /* DESKTOP NAV */
  .nav-desktop { display: flex; align-items: center; gap: 40px; }
  .nav-group { display: flex; gap: 40px; }
  .nav-link {
    text-decoration: none;
    color: #111;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-weight: 500;
  }

  .line-divider { width: 1px; height: 24px; background: #ddd; }
  .social-group { display: flex; gap: 20px; align-items: center; }
  .social-icon { width: 32px; height: 32px; object-fit: contain; }

  /* Scale YouTube/Etsy specifically */
  .social-icon[src*="youtube"], .social-icon[src*="etsy"] { transform: scale(1.2); }

  .social-fallback { 
    display: none; 
    font-size: 0.7rem; 
    text-transform: uppercase; 
    letter-spacing: 0.1em; 
    color: #111;
    font-family: 'Special Elite', monospace !important;
  }

  /* HAMBURGER */
  .hamburger {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 15px;
    z-index: 10001; /* Higher than overlay */
    position: relative;
  }

  .bar {
    display: block;
    width: 30px;
    height: 2px;
    background: #111;
    margin: 6px 0;
    transition: 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  .hamburger.active .bar:nth-child(1) { transform: translateY(8px) rotate(-45deg); }
  .hamburger.active .bar:nth-child(2) { opacity: 0; }
  .hamburger.active .bar:nth-child(3) { transform: translateY(-8px) rotate(45deg); }

  /* MOBILE MENU */
  .mobile-overlay {
    position: fixed;
    top: 0;
    right: -100%;
    width: 100%;
    height: 100vh;
    background: #fff;
    z-index: 10000;
    transition: 0.5s cubic-bezier(0.77, 0, 0.175, 1);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .mobile-overlay.open { right: 0; }
  .mobile-inner { text-align: center; padding: 40px; }
  
  .menu-label { 
    font-family: 'Special Elite', monospace !important; 
    font-size: 10px; 
    color: #999; 
    letter-spacing: 0.4em; 
    margin-bottom: 20px; 
    text-transform: uppercase;
  }

  .mobile-nav { display: flex; flex-direction: column; gap: 15px; }
  .mobile-link { 
    font-size: 2rem; 
    color: #111; 
    text-decoration: none; 
    text-transform: uppercase; 
    letter-spacing: 0.15em; 
  }

  .mobile-divider { height: 1px; background: #eee; width: 60px; margin: 30px auto; }
  .mobile-socials { display: flex; flex-direction: column; gap: 10px; }
  .mobile-socials .mobile-link { font-size: 1.2rem; color: #777; }

  /* --- MOBILE OPTIMIZATION --- */
  @media (max-width: 1024px) {
    .nav-desktop { display: none; }
    .hamburger { display: block; }
    
    .header-bar { height: 120px; } /* Taller header for mobile presence */
    
    .logo-link { width: 50%; } /* Logo spans halfway */
    .logo-img { height: auto; width: 100%; max-width: 220px; }
  }

  @media (max-width: 480px) {
    .header-bar { height: 100px; }
    .logo-link { width: 60%; }
  }
</style>
