<style>
  .header-bar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100px;
    background: white;
    box-shadow: 0 10px 30px rgba(0,0,0,0.04);
    z-index: 9999;
    display: flex;
    align-items: center;
  }

  .header-inner {
    width: 100%;
    padding: 0 60px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo-img { height: 70px; width: auto; }

  /* DESKTOP NAV STYLES */
  .nav-desktop { display: flex; align-items: center; gap: 40px; }
  .nav-group { display: flex; gap: 40px; }
  .nav-link {
    text-decoration: none;
    color: #111;
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    transition: opacity 0.3s;
  }
  .nav-link:hover { opacity: 0.5; }

  .line-divider { width: 1px; height: 30px; background: #eee; }
  
  .social-group { 
    display: flex; 
    gap: 25px; 
    align-items: center;
    /* Ensure scaled icons don't overlap neighbor space */
    overflow: visible; 
  }

  /* BASE ICON STYLES */
  .social-icon { 
    width: 32px;
    height: 32px;
    object-fit: contain;
    opacity: 0.9;
    /* Define the transition for smooth hovering */
    transition: transform 0.2s ease, opacity 0.2s ease;
    /* Set a base scale of 1 for normal icons like Instagram */
    transform: scale(1);
  }
  
  /* Standard Hover Pop for normal icons */
  .social-icon:hover { 
    opacity: 1; 
    transform: scale(1.15); 
  }

  /* --- THE WHITESPACE FIX --- */
  /* Target YouTube & Etsy specifically by filename and zoom in 25% base */
  .social-icon[src*="youtube"],
  .social-icon[src*="etsy"] {
    transform: scale(1.25);
  }

  /* Adjust hover state for already-zoomed icons so they still pop */
  .social-icon[src*="youtube"]:hover,
  .social-icon[src*="etsy"]:hover {
    opacity: 1;
    /* 1.25 base * 1.15 pop â‰ˆ 1.43 total scale on hover */
    transform: scale(1.43);
  }
  /* -------------------------- */


  .social-fallback { display: none; font-size: 0.8rem; text-transform: uppercase; letter-spacing: 0.1em; color: #111; }

  /* HAMBURGER STYLES */
